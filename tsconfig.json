{
  "compilerOptions": {
    "module": "ES6",
    "sourceMap": true,
    "target": "ES6",
    "outDir": "build",
    "rootDir": "src",
    "types": [
      "three"
    ],
    "moduleResolution": "node",
    "allowJs": true
  },
  "lib": [
    "ES2015"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}